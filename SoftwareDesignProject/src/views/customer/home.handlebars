<!-- Categories Start -->
<div class="container-fluid pt-5">
	<div class="row px-xl-5 pb-3">
		{{#each categories}}
		<div class="col-lg-4 col-md-6 pb-1 mb-3 w-100">
			<div class="card hovereffect">
				<img class="img-fluid" src="{{imgUrl}}" alt="">
				<div class="overlay">
					<a href="/customer/products?name=&cat={{id}}&sort=&from=&to=&page=" class="info">{{name}}</a>
				</div>
			</div>
		</div>
		{{/each}}
